{
  "name": "wallet-connect-relay-heroku",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "preinstall": "[ ! -d 'walletconnect-monorepo/servers/relay' ] && git submodule add --force https://github.com/WalletConnect/walletconnect-monorepo.git || exit 0",
    "postinstall": "yarn --cwd 'walletconnect-monorepo/servers/relay' install --production=false",
    "build": "yarn --cwd 'walletconnect-monorepo/servers/relay' build",
    "start": "pm2-runtime start ecosystem.config.js --env production"
  },
  "dependencies": {
    "pm2": "^5.1.0"
  }
}
